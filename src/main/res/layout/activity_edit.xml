<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/editNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="15dp" >

        </EditText>

        <EditText
            android:id="@+id/editCallType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editNumber"
            android:layout_below="@+id/editNumber"
            android:ems="10"
            android:inputType="text"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editNumber"
            android:layout_below="@+id/editCallType"
            android:ems="10"
            android:inputType="datetime"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/editDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editNumber"
            android:layout_below="@+id/editDateTime"
            android:ems="10"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editNumber"
            android:layout_toRightOf="@+id/editNumber"
            android:layout_alignParentLeft="true"
            android:text="Mob_NO"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editCallType"
            android:layout_toRightOf="@+id/editCallType"
            android:layout_alignParentLeft="true"
            android:text="Call Type"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editDateTime"
            android:layout_toRightOf="@+id/editDateTime"
            android:layout_alignParentLeft="true"
            android:text="Date_TIME"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/textViewduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editDuration"
            android:layout_toRightOf="@+id/editDuration"
            android:layout_alignParentLeft="true"
            android:text="Duration"
            android:textSize="15dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:onClick="run"
            android:text="save"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:visibility="gone">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="Delete"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/editButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="Edit"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>